/* 头部的样式 */
.jobDetail_header {
  background-color: #62D5C8;
  padding: 40rpx 20rpx 30rpx 20rpx;

}

.jobDetail_box {
  display: flex;
  justify-content: space-between;
  color: #fafffe;
  font-size: 14px;
}

.jobDetail_box_left .leftfirst,
.rightfirst {
  margin-bottom: 40rpx;
  font-size: 20px;
}

.jobDetail_bottom {
  display: flex;
  flex-wrap: wrap;
  margin-top: 5px;
}

.jobDetail_bottom .jobDetail_bottom_item {
  font-size: 12px;
  border: 1px solid #fff;
  padding: 15rpx;
  border-radius: 20rpx;
  color: #fafffe;
  margin-right: 30rpx;
}

/* 客服顾问 */
.jobDetail_linkup {
  padding: 20rpx 10rpx 40rpx 10rpx;
  background-color: rgb(239, 255, 253);
  display: flex;
}

.jobDetail_linkup .jobDetail_linkup_pic {
  flex: 3
}

.jobDetail_linkup_pic image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50px;
}

.jobDetail_linkup .jobDetail_linkup_title {
  flex: 6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
}

.jobDetail_linkup_title .jobDetail_linkup_title_name {
  font-size: 22px;
}

.jobDetail_linkup_title .jobDetail_linkup_title_dec {
  margin-top: 20rpx;
  font-size: 14px;
  color: #ccc;
}

.jobDetail_linkup_btn {
  flex: 4;
  display: flex;
  justify-content: center;
  align-items: center;
}
.jobDetail_linkup_btn input {
  color: #fff;
  border-radius: 30rpx;
  font-size: 14px;
  padding: 10rpx 0 ;
  text-align: center;
  background-color: #62d5c8;
}

/* 详情主要部分 */
.jobDetail_main{
  padding: 0 30rpx;
}
.jobDetail_main .jobDetail_main_item,.jobDetail_main_map{
  padding-top: 80rpx; 
}
.jobDetail_main_title,.jobDetail_main_map_title{
  padding-bottom: 20rpx;
}
.jobDetail_main_line,.jobDetail_main_map_title_line{
  width: 30rpx;
  height: 1px;
  background-color: #62d5c8;
  margin-bottom: 20rpx;

}
.jobDetail_main_content{
  color: #666;
}
#Mymap{
  width: 100%;
  height: 400rpx;
}
.jobDetail_main_box{
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.jobDetail_main_box_item {
  color: #62d5c8;
  border: 1px solid #62d5c8;
  margin-right: 20rpx;
  padding: 15rpx;
  border-radius: 30rpx;
  font-size: 12px;
}

/* 底部部分 */
.jobDetail_footer{
  margin-top: 60rpx;
  padding: 50rpx 20rpx;
  background-color: #effffd;
  display: flex;
}
.jobDetail_footer .jobDetail_footer_pic {
  flex: 4
} 
.jobDetail_footer_pic image {
  width: 200rpx;
  height: 200rpx;
}
.jobDetail_footer_right{
  flex: 7
}
.jobDetail_br_title {
  font-size: 24px;
}
.jobDetail_br_font {
  margin: 30rpx 0;
  font-size: 14px;
}
.jobDetail_br_detail {
  font-size: 14px;
  color: #666;
}